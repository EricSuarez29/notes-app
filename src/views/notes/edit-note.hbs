<div class="col-8 col-lg-6 m-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Nota</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group mb-3">
                    <input type="text" name="title" class="form-control" placeholder="Titulo" value="{{note.title}}">
                </div>
                <div class="form-group mb-3">
                    <textarea name="description" placeholder="Descripcion" class="form-control">{{note.description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary w-100">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>