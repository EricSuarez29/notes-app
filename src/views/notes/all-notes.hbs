<div class="row">
    {{#each notes}}
    <div class="col-6 col-lg-4">
        <div class="card">
            <div class="card-body">
                <div class="card-title d-flex justify-content-between align-items-center">
                    <h3>{{ title }}</h3> <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                </div>
                <hr class="my-2">
                <p>{{ description }}</p>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-danger w-100 btn-sm" type="submit">Borrar</button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body p-5">
            <h1>Hola {{ user.name }}</h1>
            <h4 class="text-center mb-5">No hay notas a√∫n inserte una nueva Nota</h4>
            <a href="/notes/add" class="btn btn-success w-100">Crear Nueva Nota</a>
        </div>
    </div>
    {{/each}}
</div>